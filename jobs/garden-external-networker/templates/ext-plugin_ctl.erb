#!/bin/bash

RUN_DIR=/var/vcap/sys/run/garden_external_networker
LOG_DIR=/var/vcap/sys/log/garden_external_networker
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    <% if p("socket") != "" %>
      mkdir -p $(dirname <%= p("socket") %>) 
      chown -R vcap:vcap $(dirname <%= p("socket") %>) 
    <% end %>

    echo $$ > $PIDFILE

    exec /var/vcap/packages/runc-cni/bin/garden-external-networker \
    -socket <%= p("socket") %> \
    -configFile <%= p("config_file") %> \
      >>  $LOG_DIR/garden_external_networker.log \
      2>> $LOG_DIR/garden_external_networker.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    <% if p("socket") != "" %>
      rm -f <%= p("socket") %>
    <% end %>

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
